{
  "name": "rollup-kit-template",
  "version": "2.0.8",
  "description": "rollup打包SDK、jslib时基本配置",
  "main": "build/index.common.js",
  "module": "build/index.esm.js",
  "browser": "build/index.umd.js",
  "unpkg": "build/index.js",
  "directories": {
    "example": "examples",
    "test": "tests"
  },
  "scripts": {
    "build": "cross-env NODE_ENV=production rollup -c",
    "watch": "cross-env NODE_ENV=development rollup -c -w",
    "dev": "npm-run-all --parallel copy start watch",
    "start": "serve examples",
    "copy": "node script/copy.js",
    "lint": "eslint --ext .js src test/unit test/e2e",
    "test": "echo \"Error: no test specified\"",
    "postversion": "git push --follow-tags",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -w"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.{js}": [
      "eslint --fix",
      "git add"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.7.2",
    "@babel/preset-env": "^7.7.1",
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-angular": "^11.0.0",
    "@rollup/plugin-babel": "^5.2.1",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^9.0.0",
    "@rollup/plugin-url": "^4.0.0",
    "autoprefixer": "^9.7.2",
    "babel-preset-env": "^1.7.0",
    "conventional-changelog": "^3.1.15",
    "cross-env": "^6.0.3",
    "cz-conventional-changelog": "^3.0.2",
    "eslint": "^6.6.0",
    "eslint-config-standard": "^14.1.0",
    "husky": "^4.3.0",
    "lint-staged": "^9.4.3",
    "md5": "^2.2.1",
    "npm-run-all": "^4.1.5",
    "rollup": "^1.27.1",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-replace": "^2.2.0",
    "rollup-plugin-terser": "^5.1.2",
    "serve": "^11.3.2"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 8"
  ],
  "keywords": [
    "rollup",
    "eslint",
    "SDK"
  ],
  "dependencies": {
    "@rollup/plugin-babel": "^5.2.1",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^9.0.0",
    "dotenv": "^8.2.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "rollup-plugin-livereload": "^2.0.0"
  }
}
